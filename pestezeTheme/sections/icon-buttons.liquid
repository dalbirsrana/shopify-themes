{% assign blockCount =  section.blocks | size %}
<div id="call-to-action" class="call-to-action-{{section.id}}" >
  <div class="f_top">
    <div class="container">
      <div class="blocks-wrapper">
        {% for block in section.blocks %}
           <div {{ block.shopify_attributes }} class="ftop_blk {% if forloop.last == true %} bor_none {% endif %}">
            <a href="{{ block.settings.cta_link }}"><h5>{{ block.settings.cta_text | escape }} <span class="fa fa-arrow-circle-right"></span></h5></a>
            <span class="icon"><i class="fa fa-{{ block.settings.cta_icon | escape }}"></i></span> 
           </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<style>
  .call-to-action-{{section.id}} .f_top .ftop_blk h5 {
    color:{{ section.settings.ctab_heading_color }};
  }
  .call-to-action-{{section.id}} .f_top .icon {
    color:{{ section.settings.ctab_link_color }};
  }
  .call-to-action-{{section.id}} .fa-arrow-circle-right {
    color:{{ section.settings.ctab_link_color }} !important;
  }
</style>
{% schema %}
  {
    "name": "Icon buttons",
	  "max_blocks": 4,	
	  "settings":[
	    {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "ctab_heading_color",
        "label": "Text",
        "default": "#282727"
      },
      {
        "type": "color",
        "id": "ctab_link_color",
        "label": "Icons",
        "default": "#107FA8"
      }
	],
    "blocks" : [
      {
        "type": "text",
        "name": "Call to action box",
        "settings": [
      {
        "type": "text",
        "id": "cta_text",
        "label": "Text"
      },
	  {
        "type": "paragraph",
        "content": "Icon"
      },
      {
        "type": "text",
        "id": "cta_icon",
        "label": "fa-",
		"info": "[See icon choices](https:\/\/fontawesome.com\/v4.7.0\/icons\/)"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "Link URL"
      }
    ]
   }
]
}
{% endschema %}
